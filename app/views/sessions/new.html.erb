<% provide(:title, "Sign in") %>


<div class="row">
  <div class="col-md-4 col-md-offset-4 shadowed-thin">
    <%= form_for(:session, url: sessions_path, html: {class: "form-signin"}) do |f| %>
    <h1 class='form-signin-heading'>Sign in</h1>

      <%= f.text_field :username, class: "form-control", placeholder: "Username" %>

      <%= f.password_field :password, class: "form-control", placeholder: "Password"  %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

    <p style="text-align:center">New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
