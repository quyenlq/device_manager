<div class="row">
	<div class="col-md-8 left-header ">
		<h1>WELCOME TO <a href="">BKSTREAMING </a></h1>
		<p>Already registered? Click <a href="<%= signin_path %>"><b>here</b></a>
		</p>
	</div>
	<div class="col-md-4">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Please sign up to use our service <small>It's free!</small></h3>
			</div>
			<div class="panel-body">
				<%= form_for(@user, html: {role: "form"}) do |f| %>
				<%= render 'shared/error_messages', object: @user %>
				<div class="form-group">
					<%= f.text_field :name,class: "form-control input-sm", placeholder: "Fullname" %>
				</div>

				<div class="form-group">
					<%= f.text_field :username,class: "form-control input-sm", placeholder: "Username" %>
				</div>

				<div class="row">
					<div class="col-xs-6 col-sm-6 col-md-6">
						<div class="form-group">
							<%= f.password_field :password,class: "form-control input-sm", placeholder: "Password" %>
						</div>
					</div>
					<div class="col-xs-6 col-sm-6 col-md-6">
						<div class="form-group">
							<%= f.password_field :password_confirmation,class: "form-control input-sm", placeholder: "Password confirmation" %>
						</div>
					</div>
				</div>

				<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
				<% end %>

			</form>
		</div>
	</div>
</div>
</div>
